# Window compositor
exec_always --no-startup-id bash -c "sleep 1 && if ! pgrep -x 'picom' > /dev/null; then picom -b --config ~/.config/picom/picom.conf; fi"

# xrandr 
exec_always --no-startup-id xrandr --output DisplayPort-0 --mode 2560x1440 --rate 180 --pos 0x0 --scale 1x1

# polybar
exec_always --no-startup-id polybar mybar

# fcitx5
exec_always --no-startup-id fcitx5

# Polkit authentication agent
exec_always --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# nitrogen 
exec_always --no-startup-id nitrogen --restore

# 
exec_always --no-startup-id xidlehook --not-when-audio --not-when-fullscreen --timer 1200 'betterlockscreen -l dimblur -- --clock' ''
